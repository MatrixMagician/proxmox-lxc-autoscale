[Unit]
Description=LXC AutoScale ML
Documentation=https://github.com/fabriziosalmi/proxmox-lxc-autoscale
Maintainer=Fabrizio Salmi <fabrizio.salmi@gmail.com>
After=network.target

[Service]
ExecStart=/usr/bin/python3 /usr/local/bin/lxc_autoscale_ml.py
User=root
Group=root
Environment="PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin"

# Restart on failure
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
